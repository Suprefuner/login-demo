{
  "name": "login_system",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup-production": "pnpm run install-client && pnpm run build-client && pnpm install",
    "install-client": "cd ../client && pnpm install",
    "build-client": "cd ../client && pnpm run build",
    "server": "nodemon app.js --ignore ../client",
    "client": "pnpm run dev --prefix ../client",
    "start-backup": "concurrently --kill-others-on-fail \"pnpm run server\" \"pnpm run client\"",
    "start": "nodemon app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^3.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0",
    "validator": "^13.12.0"
  }
}
